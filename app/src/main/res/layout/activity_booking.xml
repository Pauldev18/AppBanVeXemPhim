<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8f4e3">

    <!-- TextView for Dates -->
    <TextView
        android:id="@+id/tv_dates_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách ngày chiếu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView for Dates -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal" />

    <!-- TextView for Provinces -->
    <TextView
        android:id="@+id/tv_provinces_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách tỉnh thành"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView for Provinces -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_provinces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal" />

    <!-- Add more TextViews and RecyclerViews here if needed -->
    <TextView
        android:id="@+id/tv_rap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách rạp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView for Dates -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal" />

    <!-- TextView for Provinces -->
    <TextView
        android:id="@+id/tv_giochieutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách giờ chiếu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView for Provinces -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_giochieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal" />

</LinearLayout>
</ScrollView>

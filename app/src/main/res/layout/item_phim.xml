<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_phim"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/black">

    <!-- ImageView cho poster phim -->
    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray" />

    <!-- Các nhãn thông tin phim (T16, Phụ đề, 2D) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/movie_label_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_background_red"
            android:padding="4dp"
            android:text="T16"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginRight="4dp" />

        <TextView
            android:id="@+id/movie_label_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_background_yellow"
            android:padding="4dp"
            android:text="PHỤ ĐỀ"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginRight="4dp" />

        <TextView
            android:id="@+id/movie_label_2d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_background_green"
            android:padding="4dp"
            android:text="2D"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Tên phim -->
    <TextView
        android:id="@+id/tenphim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STALKER"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <!-- Thể loại phim -->
    <TextView
        android:id="@+id/theloai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thể loại phim: Thriller"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Header -->
        <ImageView
            android:id="@+id/img_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <!-- Button -->
        <Button
            android:id="@+id/btn_buy_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#76FF03"
            android:text="MUA VÉ NGAY"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <!-- Title -->
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TOTTO-CHAN: THE LITTLE GIRL AT THE WINDOW"
            android:textColor="#76FF03"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Một ngôi trường lý tưởng ở Tokyo trong Thế chiến thứ hai..."
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!-- Classification -->
        <TextView
            android:id="@+id/txt_classification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Phân loại: T13 Phim phổ biến đến người xem từ 13 tuổi trở lên"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!-- Format -->
        <TextView
            android:id="@+id/txt_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Định dạng: 2D"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!-- Director -->
        <TextView
            android:id="@+id/txt_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Đạo diễn: Shinnosuke Yakuwa"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!-- Cast -->
        <TextView
            android:id="@+id/txt_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Diễn viên: Shun Oguri, Anne Watanabe"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!-- Genre -->
        <TextView
            android:id="@+id/txt_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Thể loại: Animation"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!-- Release Date -->
        <TextView
            android:id="@+id/txt_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Khởi chiếu: 31/05/2024"
            android:textColor="#ffffff"
            android:textSize="14sp" />


        <!-- Language -->
        <TextView
            android:id="@+id/txt_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ngôn ngữ: Phụ đề"
            android:textColor="#ffffff"
            android:textSize="14sp" />



    </LinearLayout>
</ScrollView>